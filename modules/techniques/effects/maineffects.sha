block Fader()
{
	technique t0
	{
		pass p0
		{
			lighting = false;
			ZEnable = false;
			fogenable = false;
			cullmode = none;
			AlphaTestEnable = false;
			AlphaBlendEnable = true;
			SrcBlend = srcalpha;
			DestBlend = invsrcalpha;
			ColorArg1[0] = diffuse;
			ColorArg2[0] = texture;
			ColorOp[0] = modulate;
			ColorOp[1] = disable;
			AlphaArg1[0] = diffuse;
			AlphaOp[0] = SelectArg1;
			AlphaOp[1] = disable;
			Render.Draw

			Restore.States

		}
	}
}

